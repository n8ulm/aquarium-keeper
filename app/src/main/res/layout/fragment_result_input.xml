<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:minHeight="250dp"
        android:elevation="8dp"
        android:theme="@style/Text"
        app:cardBackgroundColor="@color/colorMaterialLight"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/colorMaterialGrey"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:theme="@style/Text"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="4dp">
                <TextView
                    android:id="@+id/title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Results"
                    android:textSize="30dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/aquarium_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_layout"
                style="@style/AppTheme"
                android:layout_marginStart="16dp"/>

            <Spinner
                android:id="@+id/parameter_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/aquarium_spinner"
                style="@style/AppTheme"
                android:layout_marginStart="16dp"/>

            <LinearLayout
                android:id="@+id/result_data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/parameter_spinner"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/test_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Result"
                    android:textSize="18dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:id="@+id/result_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number|numberDecimal"
                    android:paddingEnd="10dp"
                    android:text=""
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/unit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="ppm (mg/L)"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/result_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/result_data_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/result_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:text="Test Date"
                    android:textSize="18dp"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:id="@+id/result_date_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:paddingEnd="10dp"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/date_picker_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_event_black_24dp"
                    android:theme="@style/AppTheme"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/result_date_layout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/view_log_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="View Log" />

                <Button
                    android:id="@+id/save_result_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Result" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
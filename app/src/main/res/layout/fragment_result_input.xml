<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Test"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Spinner
        android:id="@+id/parameter_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_textView" />

    <LinearLayout
        android:id="@+id/result_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/parameter_spinner">

        <TextView
            android:id="@+id/test_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Result"
            android:textSize="18dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/result_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingEnd="10dp"
            android:text="         " />

        <TextView
            android:id="@+id/ppm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="ppm (mg/L)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/result_data_layout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/result_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:text="Test Date"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/result_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:paddingEnd="10dp"
            android:text="Date" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/result_date_layout"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/cancel_result_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/save_result_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Result" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>